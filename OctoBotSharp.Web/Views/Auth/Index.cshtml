@model OctoBotSharp.Web.Models.Auth.PasswordSignIn

@{
    ViewBag.Title = "Sign In";
}

<h2>Sign In</h2>
@using (Html.BeginForm("Login", "Auth"))
{
    @Html.EditorForModel()
    @Html.ValidationSummary(excludePropertyErrors: true)

    <button class="btn btn-primary" type="submit">Sign In</button>
    <a href="@Url.Action("ForgotPassword")">Reset Password</a>
}

<h2>New User?</h2>
<a class="btn btn-default" href="@Url.Action("Register")" role="button">Register</a>
